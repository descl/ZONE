<div class="row-fluid">
	<div class="span1"></div>
	<div class="span10">
		<ul class="breadcrumb">
			<li id="breadcrumbSources" class="active">
				<%= raw t 'newmodal.breadcrumb.sources' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li id="breadcrumbFiltering">
				<%= raw t 'newmodal.breadcrumb.filtering' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li>
				<%= raw t 'newmodal.breadcrumb.results' %>
			</li>
		</ul>
	</div>
</div>
<form action="/items" method="GET" id="formModal">
	<div class="row-fluid">
		<div class="tab-content">
			<div class="tab-pane active" id="sources">
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h2><%= raw t 'newmodal.sources.title' %></h2>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<div class="row-fluid">
							<div class="span1"></div>
							<div class="span2" id="imgTwitter">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundTwitter.png" onclick="slideDown('#formTwitter');"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgGoogle">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundGoogleGray.png"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgRSS">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundRSS.png" onclick="slideDown('#formRSS');"/>
							</div>
						</div>
						<div id="formTwitter" class="row-fluid form" hidden>
							<div class="span1"></div>
							<div class="span10">
								<div class="contentTwitter" >
									<div class="formHeader twitter">
										<div class="span1"></div>
										<h3 class="titleHeader">Twitter</h3>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on"><b>@</b></span>
												<input name="inputLogin" type="text" class="inputLogin span10" id="loginTwitter" autocomplete="off" placeholder="<%= raw t 'newmodal.sources.twitter.holderpersonn' %>" onKeyPress="if (event.keyCode == 13){ addSource('Twitter','#loginTwitter');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on"><b>#</b></span>
												<input name="inputSearch" type="text" class="inputSearch span10" id="searchTwitter" autocomplete="off" placeholder="<%= raw t 'newmodal.sources.twitter.holdertag' %>" onKeyPress="if (event.keyCode == 13){ addSource('Twitter','#searchTwitter');return false;}" />
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<div class="span4">
													<hr>
												</div>
												<div class="span4 text-center">
													<h4 class="blackh4"><%= raw t 'newmodal.sources.separator' %></h4>
												</div>
												<div class="span4">
													<hr>
												</div>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span4"></div>
											<div class="span4">
												<div class="span1"></div>
												<button id="addAllTwitter" class="btn btn-success span10" type="button" onclick="addAllSource('Twitter','<%= raw t 'newmodal.sources.twitter.all' %>');return false;">
													<%= raw t 'newmodal.sources.twitter.all' %>
												</button>
											</div>
										</div>

									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
						<div id="formRSS" class="row-fluid form" hidden>
							<div class="span1"></div>
							<div class="span10">
								<div class="contentRSS">
									<div class="formHeader rss">
										<div class="span1"></div>
										<h3 class="titleHeader">RSS</h3>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on"><i class="icon-search"></i></span>
												<input name="inputSearch" id="searchRSS" type="text" class="inputSearch span10" autocomplete="off" placeholder="<%= raw t 'newmodal.sources.rss.holderurl' %>" onKeyPress="if (event.keyCode == 13){addSource('RSS','#searchRSS');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<div class="span4">
													<hr>
												</div>
												<div class="span4 text-center">
													<h4 class="blackh4"><%= raw t 'newmodal.sources.separator' %></h4>
												</div>
												<div class="span4">
													<hr>
												</div>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div class="span3">
												<button class="btn btn-info span12" type="button" disabled>
													<%= raw t 'newmodal.sources.rss.yourrss' %>
												</button>
											</div>
											<div class="span4">
												<div class="span1"></div>
												<button id="addAllRSS" class="btn btn-success span10" type="button" onclick="addAllSource('RSS','<%= raw t 'newmodal.sources.rss.all' %>');return false;">
													<%= raw t 'newmodal.sources.rss.all' %>
												</button>
											</div>
											<div class="span3">
												<button class="btn btn-danger span12" type="button" disabled>
													<%= raw t 'newmodal.sources.rss.opml' %>
												</button>
											</div>
										</div>
									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
					</div><!--span12 -->
				</div><!--row-fluid -->
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h2><%= raw t 'newmodal.sources.choice' %></h2>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div id="wellSources" class="span10 well"></div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<hr>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span4">
						<button class="btn btn-info span12" type="button"  onclick="switchTab()">
							<h3><%= raw t 'newmodal.sources.gofiltering' %></h3>
						</button>
					</div>
					<div class="span2"></div>
					<div class="span4">
						<a href="/items">
						<button class="btn btn-success span12" type="button">
							<h3><%= raw t 'newmodal.sources.goreador' %></h3>
						</button> </a>
					</div>
				</div>
			</div><!--tab-pane -->
			<div class="tab-pane" id="filtering">
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h2><span class="numberFiltering bigNumberFiltering">1</span> <%= raw t 'newmodal.filtering.title' %>
						<button class="btn btn-primary pull-right" type="button" onclick="reverseSwitchTab()">
							<%= raw t 'newmodal.sources.reverseswitch' %>
						</button></h2>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<div class="row-fluid">
							<input class="span12" id="keyword" type="text" placeholder="Keyword" onkeyup="askUpdateKeywordTable();return false;">
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<div class="row-fluid">
							<div class="span8">
								<div class="row-fluid">
									<div class="span12">
										<h3><span class="numberFiltering smallNumberFiltering">2</span> <%= raw t 'newmodal.filtering.related' %></h3>
									</div>
								</div>
								<div class="row-fluid">
									<div class="span12">
										<div class="keywordOverflow">
											<div id="progressBarFiltering" class="progress progress-striped active">
												<div class="bar bar-success span12"></div>
											</div>
											<table class="table table-striped table-bordered table-hover pre-scrollable" id="keywordTable">
												<tbody></tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							<div class="span4">
								<div class="row-fluid">
									<div class="span12">
										<h3><span class="numberFiltering smallNumberFiltering">3</span> <%= raw t 'newmodal.filtering.filtertype' %></h3>
									</div>
								</div>
								<div class="row-fluid">
									<button class="btn btn-info span12 marged" type="button" onclick="addFilter('or');return false">
										<h4 class="whiteh4"><%= raw t 'newmodal.filtering.buttonOption' %></h4>
									</button>
								</div>
								<div class="row-fluid">
									<button class="btn btn-success span12 marged" type="button" onclick="addFilter('and');return false">
										<h4 class="whiteh4"><%= raw t 'newmodal.filtering.buttonMusthave' %></h4>
									</button>
								</div>
								<div class="row-fluid">
									<button class="btn btn-danger span12" type="button" onclick="addFilter('without');return false">
										<h4 class="whiteh4"><%= raw t 'newmodal.filtering.buttonBan' %></h4>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<hr>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h4 class="blackh4"><%= raw t 'newmodal.filtering.resume.option' %></h4>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div id="wellOr" class="span10 well well-info">
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h4 class="blackh4"><%= raw t 'newmodal.filtering.resume.musthave' %></h4>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div id="wellAnd" class="span10 well well-success">
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h4 class="blackh4"><%= raw t 'newmodal.filtering.resume.ban' %></h4>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div id="wellWithout" class="span10 well well-danger">
					</div>
				</div>
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<hr>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4"></div>
					<div class="span4">
						<a href="/items">
						<button class="btn btn-success span12" type="button">
							<h3><%= raw t 'newmodal.sources.goreador' %></h3>
						</button> </a>
					</div>
				</div>
			</div> <!--Pane-filtering-->
		</div>
	</div>
</form>
