<div class="row-fluid">
	<div class="span12">
		<ul class="breadcrumb">
			<li id="breadcrumbSourcesOne" class="active">
				<%= raw t 'newmodal.breadcrumb.sources.one' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li id="breadcrumbSourcesTwo" style="display:none">
				<%= raw t 'newmodal.breadcrumb.sources.two' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li id="breadcrumbFilteringOne">
				<%= raw t 'newmodal.breadcrumb.filtering.one' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li id="breadcrumbFilteringTwo" style="display:none">
				<%= raw t 'newmodal.breadcrumb.filtering.two' %><span class="divider"><i class="icon-chevron-right"></i></span>
			</li>
			<li>
				<%= raw t 'newmodal.breadcrumb.results' %>
			</li>
		</ul>
	</div>
</div>
<form action="/items" method="GET" id="formModal">
	<div class="row-fluid">
		<div class="tab-content">
			<div class="tab-pane active" id="sourcesFirst">
				<div class="row-fluid">
					<div class="span1"></div>
					<div class="span10">
						<h2><%= raw t 'newmodal.sources.title' %></h2>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span12">
						<div class="row-fluid">
							<div class="span1"></div>
							<div class="span2" id="imgTwitter">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundTwitter.png" onclick="slideDown('#formTwitter');"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgGoogle">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundGoogleGray.png"/>
							</div>
							<div class="span2"></div>
							<div class="span2" id="imgRSS">
								<img class="circleImage thumbnail accordion-toggle" src="/assets/foregroundRSS.png" onclick="slideDown('#formRSS');"/>
							</div>
						</div>
						<div id="formTwitter" class="row-fluid form" style="display:none;">
							<div class="span1"></div>
							<div class="span10">
								<div class="contentTwitter" >
									<div class="formHeader twitter">
										<div class="span1"></div>
										<h3 class="titleHeader">Twitter</h3>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on">@</span>
												<input name="inputLogin" type="text" class="inputLogin span10" id="loginTwitter" placeholder="<%= raw t 'newmodal.sources.twitter.holderpersonn' %>" onclick="$(this).prop('readonly',false);$('#searchTwitter').prop('readonly',true);$('#searchTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addSource('#wellTwitter','#loginTwitter');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on">#</span>
												<input name="inputSearch" type="text" class="inputSearch span10" id="searchTwitter" placeholder="<%= raw t 'newmodal.sources.twitter.holdertag' %>" readonly onclick="$(this).prop('readonly',false);$('#loginTwitter').prop('readonly',true);$('#loginTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addSource('#wellTwitter','#searchTwitter');return false;}" />
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<hr>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span4"></div>
											<div class="span4">
												<button class="btn btn-success span12" type="button" onclick="addAllSource('#wellTwitter','<%= raw t 'newmodal.sources.twitter.all' %>');return false;">
													<%= raw t 'newmodal.sources.twitter.all' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="titleFormContent twitter span12">
												<div class="span1"></div>
												<h3 class="titleHeader"><%= raw t 'newmodal.sources.choice' %></h3>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div id="wellTwitter" class="span10 well"></div>
										</div>
									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
						<div id="formRSS" class="row-fluid form" style="display:none;">
							<div class="span1"></div>
							<div class="span10">
								<div class="contentRSS">
									<div class="formHeader rss">
										<div class="span1"></div>
										<h3 class="titleHeader">RSS</h3>
									</div>
									<div class="formContent">
										<div class="row-fluid">
											<div class="span12 input-prepend">
												<div class="span1"></div>
												<span class="add-on"><i class="icon-white icon-search"></i></span>
												<input name="inputSearch" id="searchRSS" type="text" class="inputSearch span10" placeholder="<%= raw t 'newmodal.sources.rss.holderurl' %>" onKeyPress="if (event.keyCode == 13){addSource('#wellRSS','#searchRSS');return false;}">
											</div>
										</div>
										<div class="row-fluid">
											<div class="span12">
												<hr>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span4"></div>
											<div class="span4">
												<button class="btn btn-success span12" type="button" onclick="addAllSource('#wellRSS','<%= raw t 'newmodal.sources.rss.all' %>');return false;">
													<%= raw t 'newmodal.sources.rss.all' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<div class="titleFormContent rss span12">
												<div class="span1"></div>
												<h3 class="titleHeader"><%= raw t 'newmodal.sources.choice' %></h3>
											</div>
										</div>
										<div class="row-fluid">
											<div class="span1"></div>
											<div id="wellRSS" class="span10 well"></div>
										</div>
									</div>
									<!--formContent twiiter-->
								</div>
							</div>
						</div>
					</div><!--span12 -->
				</div><!--row-fluid -->
				<hr>
				<div class="row-fluid">
					<div class="span4"></div>
					<div class="span4">
						<button class="btn btn-success" type="button" onclick="switchTab()">
							<h3><%= raw t 'newmodal.sources.switch' %></h3>
						</button>
					</div>
				</div>
			</div><!--tab-pane -->
			<div class="tab-pane" id="sourcesSecond">
				Hi i'm sources 2/2
			</div>
			<div class="tab-pane" id="FilteringFirst">
				Hi i'm filtering 1/2
			</div>
			<div class="tab-pane" id="FilteringSecond">
				Hi i'm filtering 2/2
			</div>
		</div>
	</div>
</form>
