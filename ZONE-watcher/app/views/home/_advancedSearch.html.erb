<form action="/items" method="GET" id="formModal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
			×
		</button>
		<h3 class="titleSource"><%= raw t 'semanticsource.title' %></h3>
		<h3 class="titleFiltering hidden"><%= raw t 'semanticfiltering.title' %></h3>
	</div>
	<div class="modal-body bodyModal">
		<div class="row-fluid" xmlns="http://www.w3.org/1999/html">
			<div class="span12">
				<div class="tabbable tabs-left">
					<div class="tab-content">
						<div class="tab-pane active" id="Sources">
							<div class="row-fluid modalContentPane">
								<div class="span1"></div>
								<!--3 images flipper -->
								<div class="span5">
									<ul class="unstyled">
										<li>
											<div class="flipper">
												<div class="front"><img class="circleImage" src="/assets/foregroundTwitter.png"/>
												</div>
												<div id="formTwitter" class="back span11" style="background-image: url('/assets/backgroundTwitter.png');padding: 4px;">
													<p></p><p></p>
													<p>
														<i class="icon-white icon-user"></i>
														<input name="inputLogin" type="text" class="inputLogin span10" id="loginTwitter" placeholder="Login" onclick="$(this).prop('readonly',false);$('#searchTwitter').prop('readonly',true);$('#searchTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addRowSourceTable('#formTwitter');return false;}">
													</p>
													<p>
														<i class="icon-search icon-white"></i>
														<input name="inputSearch" type="text" class="inputSearch span10" id="searchTwitter" placeholder="Tag" readonly onclick="$(this).prop('readonly',false);$('#loginTwitter').prop('readonly',true);$('#loginTwitter').val('');" onKeyPress="if (event.keyCode == 13){ addRowSourceTable('#formTwitter');return false;}" />

														<button class="pull-left btn btn-success" type="button" onclick="addAllSourceTable('formTwitter');return false;">
															<%= raw t 'semanticsource.button.addall' %>
														</button>
														<button class="pull-right btn btn-info" type="button" onclick="addRowSourceTable('#formTwitter');return false;">
															<%= raw t 'semanticsource.button.addone' %>
														</button>
													</p>
												</div>
											</div>
										</li>
										<li>
											<div class="flipper">
												<div class="front"><img class="circleImage" src="/assets/foregroundGoogle.png"/>
												</div>
												<div id="formGoogle" class="span11 back" style="background-image: url('/assets/backgroundGoogle.png');padding: 4px;">
													<p></p><p></p>
													<p>
														<i class="icon-white icon-user"></i>
														<input name="inputLogin" id="loginGoogle" type="text" class="inputLogin span10" placeholder="Login" onclick="$(this).prop('readonly',false);$('#searchGoogle').prop('readonly',true);$('#searchGoogle').val('');" onKeyPress="if (event.keyCode == 13){addRowSourceTable('#formGoogle');return false;}">
													</p>
													<p>
														<i class="icon-white icon-search"></i>
														<input name="inputSearch" id="searchGoogle" type="text" class="inputSearch span10" placeholder="Search" readonly onclick="$(this).prop('readonly',false);$('#loginGoogle').prop('readonly',true);$('#loginGoogle').val('');" onKeyPress="if (event.keyCode == 13){ addRowSourceTable('#formGoogle');return false;}">

														<button class="pull-left btn btn-success" type="button" onclick="addAllSourceTable('formGoogle');return false;">
															<%= raw t 'semanticsource.button.addall' %>
														</button>
														<button class="pull-right btn btn-danger" type="button" onclick="addRowSourceTable('#formGoogle');return false;">
															<%= raw t 'semanticsource.button.addone' %>
														</button>
													</p>
												</div>
											</div>
										</li>
										<li>
											<div class="flipper">
												<div class="front"><img class="circleImage" src="/assets/foregroundRSS.png"/>
												</div>
												<div id="formRSS" class="span11 back" style="background-image: url('/assets/backgroundRSS.png');padding: 4px;">
													<p></p><p></p>
													<p>
														<input name="inputHidden" type="hidden" class="inputLogin span10">
													</p>
													<p>
														<i class="icon-white icon-search"></i>
														<input name="inputSearch" type="text" class="inputSearch span10" placeholder="URL" onKeyPress="if (event.keyCode == 13){addRowSourceTable('#formRSS');return false;}">

														<button class="pull-left btn btn-success" type="button" onclick="addAllSourceTable('formRSS');return false;">
															<%= raw t 'semanticsource.button.addall' %>
														</button>
														<button class="pull-right btn btn-warning" type="button" onclick="addRowSourceTable('#formRSS');return false;">
															<%= raw t 'semanticsource.button.addone' %>
														</button>
													</p>
												</div>
											</div>
										</li>
									</ul>
								</div>

								<!-- resume table-->
								<div class="span5 sourceOverflow">
									<table class="table table-striped table-bordered table-hover pre-scrollable" id="sourceTable">
										<thead>
											<tr>
												<th class="span1"><%= raw t 'semanticsource.table.keyword' %></th>
												<th><%= raw t 'semanticsource.table.content' %></th>
											</tr>
										</thead>
										<tbody></tbody>
									</table>
								</div>
							</div>
						</div>
						<!-- Filtering panel -->
						<div class="tab-pane" id="Filtering">
							<div class="modalContentPane">
								<div class="row-fluid">
									<div class="span1"></div>
									<div class="span5">
										<div class="row-fluid">
											<h3><%= raw t 'semanticfiltering.keyword.title' %></h3>
										</div>
										<div class="row-fluid">
											<div class="input-prepend input-append">

												<div id="btnGroupAttr" class="btn-group" data-toggle="buttons-radio">
													<button id="btnWITH" type="button" class="btn btn-success" data-toggle="tooltip" title=<%= raw t 'semanticfiltering.keyword.with' %>>
														<i class="icon-plus"></i>
													</button>
													<script>
														$('#btnWITH').button('toggle');
													</script>
													<button id="btnAND" type="button" class="btn btn-success hidden" data-toggle="tooltip" title=<%= raw t 'semanticfiltering.keyword.and' %> style="border-radius: 4px 0 0 4px">
														<i class="icon-plus"></i>
													</button>
													<button id="btnOR" type="button" class="btn btn-info" data-toggle="tooltip" title=<%= raw t 'semanticfiltering.keyword.or' %> disabled>
														<b>O</b>
													</button>
													<button id="btnWITHOUT" type="button" class="btn btn-danger" data-toggle="tooltip" title=<%= raw t 'semanticfiltering.keyword.without' %>>
														<i class="icon-minus"></i>
													</button>
												</div>
												<input id="keyword" type="text" placeholder="Keyword" style="max-width:170px" onkeypress="if (event.keyCode == 13){ addFilter(); return false;}" onkeyup="updateKeywordTable();return false;">
												<script>
													$(function() {
														$("#keyword").autocomplete({
															source : "complete_entities/a.json",
															search : function(event, ui) {
																$("#keyword").autocomplete({source : "complete_entities/"+$("#keyword").val()+".json"});
															},
															close: function( event, ui ){
																updateKeywordTable();
															}
														});
													});
												</script>
												<button class="btn btn-success pull-right" onclick="addFilter(); return false;">
													<%= raw t 'semanticfiltering.button.addone' %>
												</button>
											</div>
										</div>
										<div class="row-fluid">
											<h3><%= raw t 'semanticfiltering.linkword.title' %></h3>
										</div>
										<div class="row-fluid">
											<button class="btn" onclick="select();return false;">
												<%= raw t 'semanticfiltering.linkword.selectall' %>
											</button>
											<button class="btn" onclick="unselect();return false;">
												<%= raw t 'semanticfiltering.linkword.unselect' %>
											</button>
										</div>
										<div class="row-fluid">
											<div class="keywordOverflow">
												<table class="table table-striped table-bordered table-hover pre-scrollable" id="keywordTable">
													<tbody></tbody>
												</table>
											</div>
										</div>
										<div class="row-fluid">
											<h3><%= raw t 'semanticfiltering.easyfilter.title' %></h3>
										</div>
									</div>

									<div class="span5" >
										<h3><%= raw t 'semanticfiltering.table.title' %></h3>
										<div class='filteringOverflow'>
											<table class="table table-striped table-bordered table-hover pre-scrollable" id="filteringTable">
												<thead>
													<tr>
														<th hidden>ID</th>
														<th class="span1"><%= raw t 'semanticfiltering.table.keyword' %></th>
														<th class="span4"><%= raw t 'semanticfiltering.table.content' %></th>
													</tr>
												</thead>
												<tbody></tbody>
											</table>
										</div>
									</div>
								</div>
								<div class="row-fluid">
									<div class="span1"></div>
									<div class="span10">
										<textarea id="filteringArea" readonly style="width:100%; resize: none"></textarea>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="movedData"></div>
		<table id="fakesynonyme" hidden>
			<thead></thead>
			<tbody>
				<tr>
					<td class="mot" value="mooc">mooc</td>
					<td class="synonyme">learning</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">mooc</td>
					<td class="synonyme">moocmooc</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">mooc</td>
					<td class="synonyme">education</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">inria</td>
					<td class="synonyme">laboratoire (recherche)</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">inria</td>
					<td class="synonyme">laboratoire (batiment)</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">inria</td>
					<td class="synonyme">recherche</td>
				</tr>
				<tr>
					<td class="mot" value="mooc">inria</td>
					<td class="synonyme">wimmics</td>
				</tr>
				<tr>
					<td class="mot" value="elearning">elearning</td>
					<td class="synonyme">onlinelearning</td>
				</tr>
				<tr>
					<td class="mot" value="elearning">elearning</td>
					<td class="synonyme">education</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="modal-footer">
		<a href="#Sources" data-toggle="tab">
		<button id="btnTabPrevious" class="btn btn-info" style="display :none;" onclick="setButtonNextTab();">
			<%= raw t 'modal.button.previous' %>
		</button></a>
		<a href="#Filtering" data-toggle="tab">
		<button id="btnTabNext" class="btn btn-info" onclick="setButtonPreviousTab();">
			<%= raw t 'modal.button.next' %>
		</button></a>
		<!--<a href="http://www.reador.net/items">-->
		<button id='btnGoReador' type="submit" style="display :none;" class="btn btn-success" onclick="movingData()">
			<%= raw t 'modal.button.go' %>
		</button>
	</div>
</form>
